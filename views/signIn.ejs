<% layout('layout/layout') %>

<div class="container user-form py-sm-5">
    <div class="row">
        <div class="col-12 col-lg-4 offset-lg-4">
            <form id="signIn" class="mt-5">
                <div class="form-group">
                    <input type="email" name="email" value="" class="form-control" placeholder="example@abcd.com">
                </div>
                <div class="form-group">
                    <input type="password" name="password" value="" class="form-control" placeholder="Enter Password">
                </div>
                <button type="submit" name="submit">Sign In</button>
            </form>
        </div>
    </div>


    <!-- Flash Message modal  -->

    <div class="modal fade" id="flashModal" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel" aria-hidden="true">
        <div class="modal-dialog" role="document">
            <div class="modal-content">
                <div class="modal-body">

                    <!-- Error and success Messages -->

                </div>
            </div>
        </div>
    </div>


</div>
